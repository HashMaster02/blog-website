---
import CoverImage from "../images/cover_1.jpg";
---

<div class="album">
  <div class="cover-image">
    <img src={CoverImage.src} alt="" />
  </div>
  <p class="title"><a href="#">Learner's Toolkit Deluxe Edition</a></p>
  <p class="release-date">Album â€¢ 2022</p>
</div>

<style>
  a {
    text-decoration: none;
    color: inherit;
  }

  .album {
    width: 150px;
    min-width: 150px;
    flex-shrink: 0;
  }

  .cover-image {
    width: 100%;
    border-radius: 10px;
    overflow: hidden;
  }

  img {
    width: 100%;
    display: block;
  }

  .title {
    font-weight: 700;
    font-size: 1.5rem;
  }

  .title:hover {
    color: var(--accent);
  }

  .release-date {
    font-family: "Manrope";
    font-weight: 600;
    color: var(--accent);
  }

  /* Desktop Styles */
  @media screen and (min-width: 810px) {
    .album {
      width: 300px;
      min-width: 300px;
    }
  }
</style>
