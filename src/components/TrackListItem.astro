---
const { title, runtime, href } = Astro.props;
---

<a href={href}>
  <li>
    <p class="blog-title">{title}</p>
    <p>{runtime}</p>
  </li>
</a>

<style>
  li {
    width: 100%;
    display: flex;
    flex-direction: row;
    gap: 0.5rem 2rem;
    align-content: center;
    justify-content: space-between;
  }

  a {
    text-decoration: none;
    color: inherit;
    font-weight: 400;
    word-spacing: 2px;
  }

  a:hover {
    color: var(--accent);
  }

  p:hover {
    text-decoration: underline;
  }
</style>
